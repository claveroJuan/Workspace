package playlist;

import java.io.IOException;

/**
 * @author JuanClavero
 *
 */
public class ProgramaShutdown {

	/**
	 * @param args
	 * @throws IOException 
	 */
	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub

		Runtime.getRuntime().exec("shutdown -s");
	}

}
